{
  "name": "excel-simplify-server",
  "version": "1.0.0",
  "description": "A Node Express RESTFUL API",
  "main": "index.js",
  "scripts": {
    "prepare": "npx ts-patch install -s",
    "preinstall": "npx -y only-allow pnpm",
    "type-check": "tsc --noEmit",
    "build": "rm -rf dist && swc src -d dist",
    "dev": "concurrently \"npm run type-check\" \"cross-env NODE_ENV=development nodemon --exec node -r @swc-node/register ./src/index.ts --require tsconfig-paths -q dist/index.js\"",
    "stripe:dev": "stripe listen --forward-to localhost:3000/webhook",
    "lint": "eslint .",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [],
  "author": "Excel Simplify",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.3",
    "firebase-admin": "^11.5.0",
    "helmet": "^6.0.1",
    "http-status": "^1.6.2",
    "joi": "^17.7.1",
    "mongoose": "^6.9.1",
    "morgan": "^1.10.0",
    "openai": "^3.2.1",
    "pm2": "^5.2.2",
    "stripe": "^11.11.0",
    "validator": "^13.9.0",
    "winston": "^3.8.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.37",
    "@swc/jest": "^0.2.24",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/morgan": "^1.9.4",
    "@types/validator": "^13.7.12",
    "concurrently": "^7.6.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "stripe-event-types": "^2.2.0",
    "swc": "^1.0.11",
    "swc-node": "^1.0.0",
    "ts-patch": "^2.1.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  }
}
